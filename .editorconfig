# The EditorConfig spec can be found at https://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true
tab_width = 4

[*.py]
charset = utf-8
indent_style = space
indent_size = 2

[*.html]
indent_style = tab

[*.{css, scss}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = tab
